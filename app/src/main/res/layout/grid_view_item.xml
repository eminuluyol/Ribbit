<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/user_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/avatar_empty"
        android:contentDescription="@string/content_dsc_avatar_image"/>

    <ImageView
        android:id="@+id/check_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="@string/content_dsc_user_checkmark"
        android:src="@drawable/avatar_selected"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:padding="4dp"
        android:maxLines="2"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/user_imageview"/>

</RelativeLayout>